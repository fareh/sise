{% extends '::base.html.twig' %}

{% block body -%}

    <form action="{{ path('nomenclature_create', {'context': context}) }}"
          method="post" {{ form_enctype(form) }}>
        {{ render(controller("SiseCoreBundle:Default:menu" , { 'PageContext' : 'New', 'TitleContextValue' : 'مراحل التعليم', 'RouteAction' : 'nomenclatureniveauscolaire' })) }}
        <br>
        <fieldset style="font-size:14pt; padding-top:10px; padding-right:10px; background-color :#EEEEEE; border-color:#EEEEEE; border-style :none; ">

            <div>
                <div>
                    <span style="display:inline-block;height:28px;width:20%;">الرمز</span>
                    <span style="display:inline-block;height:28px;width:20%;"> {{ form_widget(attribute(form,index[0])) }}</span>
                </div>
            </div>
            <div>
                <span id="CPHMain_Label2" style="display:inline-block;height:28px;width:20%;">الوصف بالعربية</span>
                <span>{{ form_widget(attribute(form,index[1])) }}</span>
            </div>
            <div>
                <span id="CPHMain_Label3" style="display:inline-block;height:28px;width:20%;">الوصف بالفرنسية</span>
                <span>  {{ form_widget(attribute(form,index[2])) }}</span>
            </div>
            <div>
                <span id="CPHMain_Label5" style="display:inline-block;height:28px;width:20%;">ترتىب العرض</span>
                <span> {{ form_widget(attribute(form,index[3])) }}</span>
            </div>
            <div>
                <span id="CPHMain_Label6" style="display:inline-block;height:28px;width:20%;">تفعيل التسمية</span>
                <span>{{ form_widget(attribute(form,index[4])) }}</span>
                {#{ entity.codegenr.codegenr == 'M' ? 'checked="checked"' :'' }#}
            </div>
        </fieldset>
        {{ form_rest(form) }}
    </form>
{% endblock %}
