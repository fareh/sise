{% extends '::base.html.twig' %}

{% block body %}
    {{ render(controller("SiseCoreBundle:Default:menu" , { 'PageContext' : 'ConsQues', 'TitleContextValue' : nameclass.libequesar, 'RouteAction' : 'effectifeleveelevedomainsousdomain' })) }}
    {{ include('SiseCoreBundle:Default:search.html.twig', {'form': search, 'pathfilter' : pathfilter}) }}

    {#
    {% if editForms|length > 0 %}
        {% for editForm in editForms %}
            {{ form(editForm) }}
        {% endfor %}
    {% endif %}#}
    {% if entities is defined  and entities|length > 0 %}
        <center>
            <br>


            <div id="CPHMain_upGridView">

                <div>
                    <table cellspacing="0"
                           style="border-color:#4F81BD;border-width:1px;border-style:Solid;width:100%;border-collapse:collapse;"
                           id="CPHMain_GridView_Browse" rules="all">
                        <tbody>
                        <tr>
                            <td align="center"
                                style="color:White;background-color:#4F81BD;border-color:#4F81BD;border-width:2px;border-style:Solid;font-weight:bold;"
                                colspan="2"></td>
                            <td align="center"
                                style="color:White;background-color:#4F81BD;border-color:#4F81BD;border-width:2px;border-style:Solid;font-weight:bold;"
                                colspan="2"></td>
                            <td align="center"
                                style="color:White;background-color:#4F81BD;border-color:#4F81BD;border-width:2px;border-style:Solid;font-weight:bold;"
                                colspan="3">عــدد التـلاميــذ
                            </td>
                        </tr>
                        <tr>
                            <th align="center" style="color:White;background-color:#4F81BD;" scope="col">المجال</th>
                            <th align="center" style="color:White;background-color:#4F81BD;" scope="col">المجال الفرعي
                            </th>
                            <th align="center" style="color:White;background-color:#4F81BD;" scope="col">عدد الفرق</th>
                            <th align="center" style="color:White;background-color:#4F81BD;" scope="col">عدد الفصول</th>
                            <th align="center" style="color:White;background-color:#92B3CF;" scope="col">ذكر</th>
                            <th align="center" style="color:White;background-color:#92B3CF;" scope="col">أنثى</th>
                            <th align="center" style="color:White;background-color:#92B3CF;" scope="col">الجملة</th>
                        </tr>
                        {% set affi = 0 %}
                        {% set class = 0 %}
                        {% set belevmasc = 0 %}
                        {% set belevfemi = 0 %}
                        {% set btotaelev = 0 %}
                        {% for key, entity in entities %}
                            {% for key1, codesousdoma in entity.codedoma.codesousdoma %}
                            <tr>
                                {% if key1==0 %}

                                <td rowspan="{{ entity.codedoma.codesousdoma|length }}">{{ entity.codedoma.libedomaar }}</td>
                                {% endif %}

                                    <td>{{ codesousdoma.libesousdomaar }}</td>
                                    <td align="right">{{ codesousdoma.ordraffi }} {% set affi = affi + codesousdoma.ordraffi %} </td>
                                {% if key1==0 %}
                                <td align="right" rowspan="{{ entity.codedoma.codesousdoma|length }}">{{ entity.nombclass }} {% set class = class + entity.nombclass %}</td>
                                <td align="right" rowspan="{{ entity.codedoma.codesousdoma|length }}">{{ entity.nombelevmasc }} {% set belevmasc = belevmasc + entity.nombelevmasc %}</td>
                                <td align="right" rowspan="{{ entity.codedoma.codesousdoma|length }}">{{ entity.nombelevfemi }} {% set belevfemi = belevfemi + entity.nombelevfemi %}</td>
                                <td align="right" rowspan="{{ entity.codedoma.codesousdoma|length }}">{{ entity.nombtotaelev }} {% set btotaelev = btotaelev + entity.nombtotaelev %}</td>
                                {% endif %}

                            </tr>
                            {% endfor %}
                        {% endfor %}

                        <tr align="center" style="color:White;background-color:#4F81BD;border-color:#4F81BD;border-width:2px;border-style:Solid;">
                            <td>الجملة:</td><td>&nbsp;</td><td>{{ affi }}</td><td>{{ class }}</td><td>{{ belevmasc }}</td><td>{{ belevfemi }}</td><td>{{ btotaelev }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </center>
    {% endif %}
{% endblock %}
