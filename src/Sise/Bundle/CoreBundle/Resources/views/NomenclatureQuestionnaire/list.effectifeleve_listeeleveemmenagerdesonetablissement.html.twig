                        <tr>
                            <th style="border-bottom: 1px solid #3768BC; text-align: right; width: 3%; background-color:#4F81BD"><strong> <span style="font-size: 12pt; color: #fff; background-color:#4F81BD ">{{ 'nombreordinal'|trans() }}</span></strong></th>
                            <th style="border-bottom: 1px solid #3768BC; text-align: right; width: 17%; background-color:#4F81BD"><strong><span style="font-size: 12pt; color: #fff; background-color:#4F81BD">{{ 'Nomprenutil'|trans() }}</span></strong></th>
                            <th style="border-bottom: 1px solid #3768BC; text-align: right; width:10%; background-color:#4F81BD"><strong><span style="font-size: 12pt; color: #fff; background-color:#4F81BD">{{ 'Genre'|trans() }}</span></strong></th>
