                                <td>{{ entity.numeelev }}</td>
                                <td align="right">{{ entity.nomprenelev }}</td>
                                <td align="right">{{ entity.codegenr }}</td>
                                <td align="right">{{ entity.codenivescol }}</td>
                                <td align="right">   {{ entity.codefili }}</td>
                                <td align="right">   {{ entity.codetypeetabautr }}</td>
