{% extends '::base.html.twig' %}

{% block body %}
    {% trans_default_domain 'SiseCoreBundle' %}
    {{ render(controller("SiseCoreBundle:Default:menu" , { 'PageContext' : 'EditQues', 'TitleContextValue' : nameclass.libequesar, 'RouteAction' : 'effectifelevevenant9emetechnique' })) }}
    {{ include('SiseCoreBundle:Default:search.html.twig', {'form': search, 'pathfilter' : pathfilter}) }}
    <div style="display: none">
        <a href="{{ path("statElev", {"codepack":"StatElev"}) }}" style="display:inline-block" id="BtnRetour">BtnRetour</a>
    </div>
    {% if entity is defined  and entity|length > 0 %}
        <center>
            <br>

            <div id="CPHMain_upGridView">

                <div>
                    <form action="{{ pathUpdate }}" method="post" class="well form-search" id="id_with_js">
                        <table cellspacing="0" rules="all" id="CPHMain_GridView_Browse"
                               style="border-color:#4F81BD;border-width:2px;border-style:Solid;width:100%;border-collapse:collapse;">
                            <thead>

                            <tr>
                                <th align="center" scope="col"
                                    style="color:White;background-color:#92B3CF;">{{ 'nombelevmasc'|trans() }}</th>
                                <th align="center" scope="col"
                                    style="color:White;background-color:#92B3CF;">{{ 'nombelevfemi'|trans() }}</th>
                                <th align="center" scope="col"
                                    style="color:White;background-color:#92B3CF;">{{ 'nombtotaelev'|trans() }}</th>

                            </tr>

                            </thead>
                            <tbody>

                            <tr>

                                <td align="right">
                                    <input type="text" name="nombelevmasc" value="{{ entity.nombelevmasc }}"
                                           id="nombelevmasc"
                                           onchange="javascript:txtChanged('nombelevmasc','nombelevfemi', 'nombtota' );">
                                </td>
                                <td align="right">
                                    <input type="text" name="nombelevfemi" value="{{ entity.nombelevfemi }}"
                                           id="nombelevfemi"
                                           onchange="javascript:txtChanged('nombelevfemi','nombelevmasc', 'nombtota' );">
                                </td>
                                <td align="right">
                                    <input type="text" name="nombtota" value="{{ entity.nombtota }}" id="nombtota"
                                           readonly>
                                </td>

                            </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </center>
    {% endif %}

{% endblock %}
