<!-- This contains the hidden content for inline calls -->
<div id="inline_content" style='padding:10px; background:#fff;'>
    <div id="PRece">
        <div id="up">

            الرجاء اختيار التعداد.
            <br>
            <select id="DDLCodeRece" name="ctl00$DDLCodeRece" onchange="getCodeRecen();" style="height:28px;width:99%;">
                {% for key ,  item in items %}
                    {% if app.session.get('LibeReceAr') == item.liberecear %}
                        <option value="{{ item.coderece }}|{{ item.annescol }}|{{ item.liberecear }}"
                                selected>{{ item.liberecear }}</option>
                    {% else %}
                        <option value="{{ item.coderece }}|{{ item.annescol }}|{{ item.liberecear }}">{{ item.liberecear }}</option>
                    {% endif %}
                {% endfor %}
            </select>

        </div>
        <br>
        <a id="btnCancel" class="buttonStyle">متابعة</a>

    </div>
</div>
<script type="text/javascript" language="javascript">
    function getCodeRecen() {
        var CodeRece = $('#DDLCodeRece').val();
        $.ajax({
            url: "/app.php" + Routing.generate('sise_core_setCodeRec'),
            type: 'GET',
            data: {'CodeRece': CodeRece},
            dataType: 'json',
            success: function (json) { // quand la réponse de la requete arrive
                return false;
            }
        });
    }

</script>