                            </td>
                            <td style="padding-right:5px; " width="15%">

                                الصفة

                            </td>
                            <td width="15%">


                            </td>

                        </tr>


                        <tr>
                            <td width="15%">  {{ form_widget(form.NomenclatureCirconscriptionregional, {'attr': {'class': 'NomenclatureCirconscriptionregional', 'onChange': 'getListe("sise_bundle_corebundle_searchpersonnel_NomenclatureCirconscriptionregional","NomenclatureDelegation", "sise_bundle_corebundle_searchpersonnel_NomenclatureDelegation" );' }}
                                ) }}
                            </td>


                            <td width="15%">  {{ form_widget(form.NomenclatureDelegation, {'attr': {'class': 'NomenclatureDelegation', 'onChange': 'getListe("sise_bundle_corebundle_searchpersonnel_NomenclatureDelegation","NomenclatureTypeetablissement", "sise_bundle_corebundle_searchpersonnel_NomenclatureTypeetablissement" );' }}
                                ) }}
                            </td>
                            <td width="15%">  {{ form_widget(form.NomenclatureTypeetablissement, {'attr': {'class': 'NomenclatureTypeetablissement', 'onChange': 'getListe("sise_bundle_corebundle_searchpersonnel_NomenclatureTypeetablissement","NomenclatureEtablissement", "sise_bundle_corebundle_searchpersonnel_NomenclatureEtablissement" );' }}
                                ) }}
                            </td>
                            <td width="15%">  {{ form_widget(form.NomenclatureEtablissement, {'attr': {'class': 'NomenclatureEtablissement', 'onChange': 'getListe("sise_bundle_corebundle_searchpersonnel_NomenclatureEtablissement","CodeEtab", "sise_bundle_corebundle_searchpersonnel_CodeEtab" );' }}
                                ) }}
                            </td>
                            <td width="15%">  {{ form_widget(form.NomenclatureNationalite) }}</td>
                            <td width="15%">  {{ form_widget(form.NomenclatureSoussituationadministrative) }}</td>
                            <td width="15%">  {{ form_widget(form.NomenclatureCorps) }}</td>
                            <td width="15%">  {{ form_widget(form.NomenclatureQualite) }}</td>
                            <td width="15%" align="center">
                                <input type="submit" name="ctl00$CPHMain$BtnRechercher" value="بحث"
                                       id="CPHMain_BtnRechercher" class="BtnRecherche">

